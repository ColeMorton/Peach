{
	"scripts": {
		"lerna:install": "./node_modules/lerna/bin/lerna.js bootstrap",
		"lerna:build": "./node_modules/lerna/bin/lerna.js run --scope @panorama-berlin/summer-2018 build:storybook",
		"lerna:test": "./node_modules/lerna/bin/lerna.js run --scope @panorama-berlin/summer-2018 test:coverage",
		"storybook": "./node_modules/lerna/bin/lerna.js run --scope @panorama-berlin/summer-2018 storybook",
		"postinstall": "yarn run lerna:install",
		"build": "yarn run lerna:build",
		"start": "yarn run storybook",
		"test": "yarn run lerna:test",
		"deploy": "yarn run lerna:build && aws s3 sync ./packages/summer-2018/.storybook-dist/ s3://panorama-summer-2018 --delete"
	},
	"devDependencies": {
		"lerna": "^2.10.2",
		"nwb": "^0.21.5"
	}
}
